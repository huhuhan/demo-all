<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

    <bean id="helloWorldService" class="com.yh.demo.aop.HelloWorldService" />
    <bean id="timeAspectHandler" class="com.yh.demo.aop.TimeAspectHandler" />
    <bean id="logAspectHandler" class="com.yh.demo.aop.LogAspectHandler" />

    <aop:config>
        <aop:aspect id="time" ref="timeAspectHandler" order="1">
            <aop:pointcut id="addAllMethod" expression="execution(* com.yh.demo.aop.HelloWorldService.*(..))" />
            <aop:before method="printTime" pointcut-ref="addAllMethod" />
            <aop:after method="printTime" pointcut-ref="addAllMethod" />
        </aop:aspect>
    </aop:config>

    <aop:config>
        <aop:aspect id="time" ref="logAspectHandler" order="2">
            <aop:pointcut id="doMethod" expression="execution(* com.yh.demo.aop.HelloWorldService.do*(..))" />
            <aop:before method="LogBefore" pointcut-ref="doMethod" />
            <aop:after method="LogAfter" pointcut-ref="doMethod" />
        </aop:aspect>
    </aop:config>

</beans>
